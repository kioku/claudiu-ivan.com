---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import CollectionListItem from "@components/CollectionListItem.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { SITE, HOME } from "@consts";

const writing = (await getCollection("writing"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="space-y-16">
      <section>
        <article class="space-y-6">
          <div class="space-y-4">
            <div class="space-y-2">
              <h1 class="text-3xl font-bold text-black dark:text-white">
                {SITE.NAME}
              </h1>
              <h2 class="text-xl font-semibold text-gray-700 dark:text-gray-300">
                Principal Architect of High-Performance Financial Platforms
              </h2>
            </div>
            <p class="text-lg leading-relaxed max-w-2xl">
              I architect and build the complex, data-intensive systems that power FinTech and InsurTech. My practice is built on a decade of experience translating extreme business requirements into resilient, scalable, and provably correct software.
            </p>
          </div>
        </article>
      </section>

      <section class="space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            My Practice
          </h5>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="space-y-3">
            <h6 class="font-semibold text-black dark:text-white">Platform Architecture</h6>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              Designing the resilient, scalable foundation for your core business applications, from greenfield builds to complex modernizations.
            </p>
          </div>
          <div class="space-y-3">
            <h6 class="font-semibold text-black dark:text-white">Technical Leadership</h6>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              Acting as a fractional CTO or Principal Engineer to guide your team, establish best practices, and ensure technical excellence.
            </p>
          </div>
          <div class="space-y-3">
            <h6 class="font-semibold text-black dark:text-white">Strategic Intervention</h6>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              Leading high-intensity engagements to rescue projects, solve performance bottlenecks, or perform technical due diligence.
            </p>
          </div>
        </div>
      </section>

      <section class="space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Writing
          </h5>
        </div>
        <ul class="flex flex-col gap-4">
          {writing.map(post => (
            <li>
              <CollectionListItem entry={post} />
            </li>
          ))}
        </ul>
      </section>

      <section class="pt-8">
        <article>
          <p class="text-base leading-relaxed text-gray-700 dark:text-gray-300">
            I partner with a select number of organizations on their most critical technical challenges. If you are building a data-intensive platform and require a principal-level architect with a track record of delivering at scale, I would be pleased to discuss how I can help.
          </p>
        </article>
      </section>

    </div>
  </Container>
</PageLayout>
