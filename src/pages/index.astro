---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import CollectionListItem from "@components/CollectionListItem.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { SITE, HOME } from "@consts";

const writing = (await getCollection("writing"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="space-y-16">
      <section>
        <article class="space-y-6">
          <div class="space-y-4">
            <div class="space-y-2">
              <h1 class="text-3xl font-bold text-black dark:text-white">
                {SITE.NAME}
              </h1>
              <h2 class="text-xl font-semibold text-black dark:text-gray-100">
                Principal System Architect.
              </h2>
            </div>
            <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
              This is where I explore the intersection of theory and practice in building robust software.
            </p>
          </div>
        </article>
      </section>

      <section class="space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h2 class="text-xl font-semibold text-black dark:text-gray-100">
            Writing
          </h2>
          <a href="/writing" class="text-sm text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white transition-colors">
            View all â†’
          </a>
        </div>
        <ul class="flex flex-col gap-4">
          {writing.map(post => (
            <li>
              <CollectionListItem entry={post} />
            </li>
          ))}
        </ul>
      </section>

      <section class="space-y-6">
        <article class="space-y-4">
          <p class="text-base leading-relaxed text-gray-700 dark:text-gray-300">
            <!-- For architectural consulting engagements, I maintain a selective practice through Software Foundry, working exclusively with financial services firms on mission-critical platform development. -->
            I partner with a select number of organizations on their most critical technical challenges. If you are building a data-intensive platform and require a principal-level architect with a track record of delivering at scale, I would be pleased to discuss how I can help.
          </p>
          <div class="text-center">
            <a
              href="https://softwarefoundry.ch"
              target="_blank"
              rel="noopener noreferrer"
              id="visit-software-foundry"
              class="inline-block mt-8 px-4 py-2 bg-stone-700 dark:bg-gray-300 text-white dark:text-stone-900 font-semibold border border-stone-700 dark:border-gray-300 hover:bg-transparent hover:text-stone-700 dark:hover:bg-transparent dark:hover:text-gray-300 transition-all duration-300 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black dark:focus-visible:outline-white"
            >
              Software Foundry
            </a>
          </div>
        </article>
      </section>

    </div>
  </Container>
</PageLayout>
