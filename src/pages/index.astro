---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import CollectionListItem from "@components/CollectionListItem.astro";
import Link from "@components/Link.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { SITE, HOME } from "@consts";

const writing = (await getCollection("writing"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="space-y-16">
      <section>
        <article class="space-y-6">
          <div class="space-y-2">
            <h1 class="text-3xl font-bold text-black dark:text-white">
              {SITE.NAME}
            </h1>
            <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300">
              Principal Architect: High-Performance Financial Platforms
            </h3>
          </div>
          <p class="text-lg leading-relaxed">
            I architect and build the complex, data-intensive systems that power FinTech and InsurTech. My practice is built on a decade of experience translating extreme business requirements into resilient, scalable, and provably correct software.
          </p>
          <hr class="border-gray-300 dark:border-gray-600" />
          <div class="flex flex-wrap gap-x-4 gap-y-2 text-base">
            <Link href="/writing" aria-label="writing">Read my thinking</Link>
            <span class="text-gray-400">⋅</span>
            <Link href="https://github.com/kioku" aria-label="github" external>See my work on GitHub</Link>
            <span class="text-gray-400">⋅</span>
            <Link href="mailto:claudiu.ivan@me.com" aria-label="email">Contact me</Link>
          </div>
        </article>
      </section>

      <section class="space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            My Practice
          </h5>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="space-y-3">
            <h6 class="font-semibold text-black dark:text-white">Platform Architecture</h6>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              Designing the resilient, scalable foundation for your core business applications, from greenfield builds to complex modernizations.
            </p>
          </div>
          <div class="space-y-3">
            <h6 class="font-semibold text-black dark:text-white">Technical Leadership</h6>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              Acting as a fractional CTO or Principal Engineer to guide your team, establish best practices, and ensure technical excellence.
            </p>
          </div>
          <div class="space-y-3">
            <h6 class="font-semibold text-black dark:text-white">Strategic Intervention</h6>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              Leading high-intensity "strike team" engagements to rescue at-risk projects, solve critical performance bottlenecks, or perform technical due diligence.
            </p>
          </div>
        </div>
      </section>

      <section class="space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Writing
          </h5>
        </div>
        <ul class="flex flex-col gap-4">
          {writing.map(post => (
            <li>
              <CollectionListItem entry={post} />
            </li>
          ))}
        </ul>
      </section>

    </div>
  </Container>
</PageLayout>
