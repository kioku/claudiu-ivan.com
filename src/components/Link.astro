---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  class?: string;
} & astroHTML.JSX.AnchorHTMLAttributes;

const { href, external, underline = true, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  target={ external ? "_blank" : "_self" }
  class={cn("inline-block cursor-pointer decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-black hover:dark:text-white transition-colors duration-300 ease-in-out focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black dark:focus-visible:outline-white", underline && "underline underline-offset-2", className)}
  {...rest}>
  <slot/>
</a>
