---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";

const year = new Date().getFullYear();
---

<footer class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
  <Container>
    <div class="space-y-6 text-center">
      <div class="space-y-4">
        <Link
          href="mailto:contact@claudiu-ivan.com?subject=Conversation%20from%20claudiu-ivan.com"
          aria-label="reach out"
          class="inline-block px-6 py-3"
        >
          contact@claudiu-ivan.com
        </Link>
      </div>

      <hr class="border-gray-300 dark:border-gray-600 max-w-xs mx-auto" />

      <div class="flex justify-center gap-4 text-sm">
        <Link href="https://github.com/kioku" aria-label="github" external>GitHub</Link>
        <span class="text-gray-400">⋅</span>
        <Link href="https://linkedin.com/in/claudiuivan" aria-label="linkedin" external>LinkedIn</Link>
        <span class="text-gray-400">⋅</span>
        <Link href="https://twitter.com/claudiuivan" aria-label="twitter" external>X (Twitter)</Link>
        <span class="text-gray-400">⋅</span>
        <Link href="https://bsky.app/profile/claudiu-ivan.com" aria-label="bluesky" external>Bluesky</Link>
      </div>

      <div class="text-sm text-gray-600 dark:text-gray-400">
        &copy; {year} {SITE.NAME}
      </div>
    </div>
  </Container>
</footer>
